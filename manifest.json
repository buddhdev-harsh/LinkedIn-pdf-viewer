{
  "manifest_version": 2,
  "name": "whatsapp pdf viewer",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/icon32.png",
    "default_popup": "index.html",
    "default_title": "PDF Detector"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequestBlocking",
    "https://*/*",
    "https://*/",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
